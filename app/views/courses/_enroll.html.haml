= simple_form_for @course, :url => enroll_path, :method => :put do
  - puts @course.errors.count
  - if @course.errors.any?
    #error_explanation
      %h2= "#{pluralize(@course.errors.count, "error")} prohibited this course from being saved:"
      %ul
        - @course.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = label :password, "Course Access Code"
    -# = text_field: :password_field_tag :password
    = password_field :password, :class => "form-control", :placeholder => "Access Code"
    = submit_tag "Enroll"
