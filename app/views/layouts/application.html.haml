!!!
%html
	%head
		%meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
		%meta(name="viewport" content="width=device-width, initial-scale=1.0")
		%title Socrates
		= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		= csrf_meta_tags
	%body
		%nav.navbar.navbar-default.navbar-fixed-top.navbar-spacing
			.container
				.navbar-header
					%button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
						%span.sr-only Toggle navigation
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					%a.navbar-brand{:href => "/"}
						%img{:href=>"#", :src => "/assets/socrates_black.png"}
				#navbar.navbar-collapse.collapse

					%ul.nav.navbar-nav.navbar-right
						%li
							%a{:href => "/"} Home
						%li
							%a{:href => "../navbar-static-top/"} Static top
						%li
							%a{:href => "./"}
								Fixed top
								%span.sr-only (current)
						%li
							-# = link_to 'Sign-In', "https://adminapps.utep.edu/sso?redirectURL=#{create_session_url}"

		.container-fluid
			-# - if current_user || request.env['PATH_INFO'] == '/'
			-#   = yield
			-# - else
			-#   = render '/layouts/unathorized'
			= yield
