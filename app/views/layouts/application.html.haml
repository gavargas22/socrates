!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Socrates
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default.navbar-fixed-top.navbar-spacing
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"}
            %img{:href=>"#", :src => "/assets/socrates_black.png"}
        #navbar.navbar-collapse.collapse

          %ul.nav.navbar-nav.navbar-right
            %li
              %a{:href => "../navbar/"} Default
            %li
              %a{:href => "../navbar-static-top/"} Static top
            %li.active
              %a{:href => "./"}
                Fixed top
                %span.sr-only (current)
    - if current_user || request.env['PATH_INFO'] == '/'
      = yield
    - else
      = render '/layouts/unathorized'
