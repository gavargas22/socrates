#utep-first-menu.collapse
	%ul.responsive-list-first
		%li=link_to 'My UTEP', root_url
		%li=link_to 'Alumni', root_url
		%li=link_to 'Parents', root_url
		%li=link_to 'Faculty & Staff', root_url
