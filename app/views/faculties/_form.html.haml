= form_for(@faculty) do |f|
  - if @faculty.errors.any?
    #error_explanation
      %h2
        = pluralize(@faculty.errors.count, "error")
        prohibited this faculty from being saved:
      %ul
        - @faculty.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .actions
    = f.submit
