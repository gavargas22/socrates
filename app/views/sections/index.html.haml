.container.spacing-from-header
	%p#notice= notice

	%h1 Listing Subjects
	- @subjects.each do |subject|
		%p= subject.short_name

	%h1 Listing Sections
	%table
		%thead
			%tr
				%th Name
				%th Department
				%th Number
				%th{:colspan => "3"}
		%tbody
			- @sections.each do |section|
				%tr
					%td= section.name
					%td= section.subject.name
					%td= section.number
					%td= link_to 'Show', section
					%td= link_to 'Edit', edit_section_path(section)
					%td= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' }
	%br/
	= link_to 'New Section', new_section_path
