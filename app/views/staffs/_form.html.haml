= form_for(@staff) do |f|
  - if @staff.errors.any?
    #error_explanation
      %h2
        = pluralize(@staff.errors.count, "error")
        prohibited this staff from being saved:
      %ul
        - @staff.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .actions
    = f.submit
